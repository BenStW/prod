$width: <%= StartWork::Application.config.stream_width  %>px;
$height: <%= StartWork::Application.config.stream_height  %>px;
$padding: <%= StartWork::Application.config.stream_padding %>px;

#timer_box {height:$height/2; line-height:$height/2;font-size: 30px;text-align:center;width:2*$width + 4*$padding;background-color:grey1}

div.video_window
{
	width: 2*$width + 4*$padding;  /* the width of the content: add margin, border, padding*/
	height: 5 * $height + 10 * $padding;
	padding:0px;
	border:0px;
	margin:0px;
    outline:1px solid gray;
}


div.user_box {      }

div.text_box { width:$width; height:$height; padding:$padding; border:0px; margin:0px; outline:0px solid gray; float:left;background-color:green1 }

div.stream_box { width:$width; height:$height; padding:$padding; border:0px; margin:0px; outline:0px solid gray; float:left;background-color:red1}

div.stream_box_tmp { width:$width; height:$height; padding:0px; border:0px; margin:0px; outline:0px solid gray; }
