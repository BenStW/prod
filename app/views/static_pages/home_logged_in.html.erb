  <div class="modal-footer">
      <button class="btn btn-large btn-success" data-dismiss="modal">Fertig!</button>      <button class="continue_button btn btn-large" data-activate_modal="#wizard4" data-activate_element="#explain4">Zurück</button>

  </div><!-- modal-footer -->
</div>
