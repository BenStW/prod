<% if !@friends.nil?%>

    <p>Deine Freunde, die bereits schon bei StartWork sind:</p>
           
    <div class="row">
       <% @friends.each do |friend| %>
         <div class="span1">
         <img src="http://graph.facebook.com/<%=friend.fb_ui%>/picture"><br>
         <%= friend.first_name%>
       </div>
       <% end %>
    </div> <!-- row --><br><br>
<% end %>


