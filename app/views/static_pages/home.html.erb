
<% if !user_signed_in? %>

  <!-- Main hero unit for a primary marketing message or call to action -->
  <div class="hero-unit">
    <h1><%= t :welcome %></h1><br>
    <%= t :welcome_text_html %>	
    <p><a class="btn btn-primary btn-large" href="<%= how_it_works_path%>"><%= t ".learn_more"%> &raquo;</a></p>
  </div><!-- end of main hero unit -->
                       
<% else %>
  <%= raw place_size_in_html %>
  <br>
  
  <%=t 'greet_username', :username => current_user.name %><br><br><hr>
  
     <%if current_user.activated? %>
        <%= link_to t(".camera_test"), camera_path, :class => "btn", :method => :get%>	<br><br>
        <hr><br>
        <h2><%= t(".work_groups") %>: </h2><br>
  
        <%= link_to 'Procrastinators in Berlin', show_work_session_path(:id=>1), :class => "connect btn"%><br><br>
        <%= link_to 'Gods of work', show_work_session_path(:id=>2), :class => "connect btn"%><br><br>
  
        <hr>
  	
         <%= link_to t(".statistics") , statistics_path, :class => "btn", :method => :get%><br><br>
     <% else %>
         <div class="hero-unit">
           <%= t(".not_activated_html") %>
        </div>	
     <% end %>
  	
  
<% end %>