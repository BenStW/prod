<h1>Listing friendships</h1>



<h2>Friends:</h2>
<table class="table table-striped">
<% @friendships.each do |friendship| %>
  <tr>
    <td><%= friendship.friend.id %></td>
    <td><%= friendship.friend.name%></td>
	<td><%= link_to "Remove Friend", friendship, :method => :delete %></td>
  </tr>
<% end %>
</table>



<br />

<h2>Other users:</h2>
<table class="table table-striped"> 
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name%></td>
	<td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></td>
  </tr>
<% end %>
</table>