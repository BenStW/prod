<h2>my Appointments</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>end_time</td><td>user</td><td>&nbsp</td><td>&nbsp;</td></tr>
	<% current_user.appointments.each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.end_time%></td><td><%=a.user.name%></td>
			<td><%= link_to "del", tmp_del_appointment_url(:appointment=>a), :class=>"btn"%></td>
			<td>
				<%= form_for @recipient_appointment, :url => tmp_send_appointment_url do |f| %>
				<%= f.hidden_field  :appointment_id, :value=>a.id  %>
				<%= f.select :user_id, User.all.map(&:id)  %> 
				 <%= f.submit "send", :class => "btn" %>	<% end %>
				</td>			
			</tr>
		<% end %>
</table>

<%= form_for @appointment, :url => tmp_create_appointment_url do |f| %>
<%= f.hidden_field :user_id %>
<%= f.datetime_select :start_time, :default => Date.today+1.day+10.hour  %>
<hr>
<%= f.datetime_select :end_time, :default => Date.today+1.day+12.hour    %>

  <%= f.submit "Create" %>
<% end %>


<h2>my ReceivedAppointments</h2>
<table class="table">	
	<tr><td>id</td><td>user</td></tr>
	<% current_user.received_appointments.each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.user.name%></td></tr>
		<% end %>
</table>	

<h2>my UserHours</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>group_hour_id</td><td>appointment_id</td><td>acc_appointment_id</td></tr>
	
	<% current_user.user_hours.each do |a| %>	<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.group_hour_id%></td><td><%=a.appointment_id%></td><td><%=a.accepted_appointment_id%></td></tr>
		<% end %>		
</table>

<h2>my GroupHours</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>tokbox_session_id</td></tr>
	<% current_user.user_hours.map(&:group_hour).each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.tokbox_session_id%></td></tr>
		<% end %>
</table>	


