

<h2>Appointments</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>end_time</td><td>user</td></tr>
	<% Appointment.all.each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.end_time%></td><td><%=a.user.name%></td></tr>
		<% end %>
</table>	

<h2>RecipientAppointment</h2>
<table class="table">	
	<tr><td>id</td><td>user</td><td>appointment</td></tr>
	<% RecipientAppointment.all.each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.user.name%></td><td><%=a.appointment_id%></td></tr>
		<% end %>
</table>

<h2>UserHour</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>group_hour_id</td><td>appointment_id</td><td>acc_appointment_id</td></tr>
	
	<% UserHour.all.each do |a| %>	<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.group_hour_id%></td><td><%=a.appointment_id%></td><td><%=a.accepted_appointment_id%></td></tr>
		<% end %>		
</table>

<h2>GroupHour</h2>
<table class="table">	
	<tr><td>id</td><td>start_time</td><td>tokbox_session_id</td><td># UserHour's</td></tr>
	<% GroupHour.all.each do |a| %>
		<tr><td><%=a.id%></td><td><%=a.start_time%></td><td><%=a.tokbox_session_id%></td><td><%=a.user_hours.count%></td></tr>
		<% end %>
</table>
