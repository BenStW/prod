# encoding: utf-8
       
<div class="hero-unit">
<h1><%= t(".sign_up") %></h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label t(".name") %>
  <%= f.text_field :name %></div>
<br />
  <div><%= f.label t(".email") %>
  <%= f.email_field :email %></div>
<br />
  <div><%= f.label t(".password") %>
  <%= f.password_field :password %></div>
<br />
  <div><%= f.label t(".password_confirmation") %>
  <%= f.password_field :password_confirmation %></div>
<br />
  <div><%= f.submit t(".sign_up"), :class => "btn-large btn-primary",:onclick => "_gaq.push(['_trackPageview', '/click/sign_up'])"  %></div>

<% end %>

<%= render("users/links") %>
         </div>