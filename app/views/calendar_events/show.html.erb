
<div class="row"> 
   <div class="span2">
	  <%= link_to t(".maintain_friends"), friendships_path, :style=>style="height:40px;width:100px", :class => "btn btn-info"%> 
   </div> <!-- end span -->	

   <div class="span10">
	 <%= t(".show_calendar_events") %>
	
	 <div class="btn-group">
       <div id="single_calendar_button" class="btn btn-primary" style="width:100px">	<%= t(".my_calendar") %></div>	
       <div id="all_friends_button" class="btn selected"  style="width:100px"><%= t(".all_friends") %></div>
     </div><!-- end btn-group -->

   </div> <!-- end span -->
</div> <!-- end row -->


<div style="height:10px">&nbsp;</div>


<div class="row"> 
   <div class="span2">
     <div id="send_invitation" class="btn btn-info" style="height:40px;width:100px"><%= t(".send_invitation") %></div>
    <!-- <a data-toggle="modal" href="#send_invitation_modal" class="btn btn-primary btn-large">Send Email</a> -->
   </div> <!-- end span -->

   <div class="span10">
	  <div class="btn-group">	
        <% @friends.each do |friend| %>
             <div id="friend<%= friend.id %>_button" name="friend_button" 
	          data-user_id="<%= friend.id %>" class="btn" style="height:40px;width:100px">
             <%=friend.name %></div>
       <% end %>
      </div> <!-- end btn-group -->
   </div> <!-- end span -->
</div> <!-- end row -->





<br>
<%= t(".description")%>
<br>


<span id="data"
  data-base_url="<%= calendar_url %>"
  data-my_user_id="<%=current_user.id%>"
  data-my_user_name="<%=current_user.name%>"
  data-users="<%=@users %>"
></span>

<div id='calendar'></div>
<br>





<div class="row">
<div class="span8 offset2">
		<h2><%= t(".work_sessions")%></h2><br>
<table class="table table-striped table-bordered table-condensed">
	<thead>
	<tr>
	<th><%= t(".start_time")%></th>
	<th><%= t(".room_name")%></th>
	<th><%= t(".work_buddies")%></th>
	</tr>
	</thead>	


<% @work_sessions.each do |work_session| %>
<tr><td>
	<%= I18n.localize(work_session.start_time.in_time_zone("Berlin")) %> 
	</td>
	<td>
<%= work_session.room.user.name %>'s room
	</td>
	
	<td>	
	<% work_session.users.each do |user| %>
	<%=	user.name %><br>
	<%	end %>
	
		</td>
		</tr>
<% end%>	
</table>

</div><!-- span4 -->
</div><!-- row -->


<%= link_to t(".back"), root_path, :class => "btn-large btn-primary"%>


<div class="modal hide fade" id="send_invitation_modal">
  <div class="modal-header">
     <button class="close" data-dismiss="modal">×</button>
     <h3>Einladung an Work-Buddies senden</h3>
  </div>
  <div class="modal-body">
     <p>Möchtest du jetzt eine Einladung an deine ausgewählten Work-Buddies senden?</p>
  </div>
  <div class="modal-footer">
       <a href="#" url="<%=calendar_send_invitation_url%>" id="send_invitation_confirmation" class="btn" data-dismiss="modal">Senden</a>
       <a href="#" class="btn" data-dismiss="modal">Abbrechen</a>
  </div>
</div>

<div class="modal hide fade" id="no_users_selected_modal">
  <div class="modal-header">
     <button class="close" data-dismiss="modal">×</button>
     <h3>Einladung an Work-Buddies senden</h3>
  </div>
  <div class="modal-body">
     <p>	Selektiere erst deine WorkBuddies, denen du eine Einladung senden möchtest.</p>
          <p>     Oder drücke 'Alle Freunde', wenn du allen eine Einladung schicken möchtest.</p>
  </div>
  <div class="modal-footer">
       <a href="#" class="btn" data-dismiss="modal">Ok</a>
  </div>
</div>




